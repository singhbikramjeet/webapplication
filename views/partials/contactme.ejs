<div class="col-md-12 mx-4 my-4">
    <div class="col-md-12">
         <h1 class="h1 text-warning text-center"><i class="fas fa-mobile-alt"></i>Contact Me!</h1><br>
    </div>
    <!--Form -->
    <form class="form" action="/home">
        <div class="form-group">
          <label class="h5 text-white control-label col-sm-2" for="name">Name:</label>
          <div class="col-sm-5">
                <input type="name" class="form-control" id="Name" placeholder="Enter Full Name">
          </div>
        </div>
        <div class="form-group">
          <label class="h5 text-white control-label col-sm-2" for="email">E-mail Id:</label>
          <div class="col-sm-5">
                <input type="email" class="form-control" id="email" placeholder="Enter e-mail id">
          </div>
        </div>
        <div class="form-group">
            <label class="h5 text-white control-label col-sm-2" for="contact">Contact Number:</label>
            <div class="col-sm-5">
                <input type="contact" class="form-control" id="contact" placeholder="Enter contact number">
            </div>
        </div>
        <div class="form-group">
            <label class="h5 text-white control-label col-sm-2" for="message">Message:</label>
            <div class="col-sm-5">
                <input type="message" class="form-control" id="message" placeholder="Enter message">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-2 mt-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
    <p class="mt-3 h7 text-white">Thanks for contacting me. I will contact you back in next 24-48 hours.</p>
</div>
